<h1>Editing Book</h1>

<p id="error_message">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>
</p>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>
|
<a class="back" href="/books">Back</a>
